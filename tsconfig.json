{
  "compilerOptions": {
    "moduleResolution": "node16",
    "module": "CommonJS",
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "strict": true,
    "alwaysStrict": true,
    "pretty": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "./test/**/*", "./dist"]
}
