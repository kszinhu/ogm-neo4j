{
  "compilerOptions": {
    "moduleResolution": "Node16",
    "module": "Node16",
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "strict": true,
    "alwaysStrict": true,
    "pretty": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "./src",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@models/*": ["./src/models/*"],
      "@query/*": ["./src/query/*"],
      "@schema/*": ["./src/schema/*"],
      "@types/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"],
      "@errors/*": ["./src/errors/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "exclude": ["**/node_modules/**"]
      },
      {
        "transform": "typescript-transform-paths",
        "exclude": ["**/node_modules/**"],
        "afterDeclarations": true
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "./test/**/*.spec.ts", "./dist"]
}
